{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install --legacy-peer-deps && npx vite build",
    "watchPatterns": [
      "**/*.tsx",
      "**/*.ts", 
      "**/*.jsx",
      "**/*.js",
      "**/*.css",
      "**/*.scss",
      "**/*.json"
    ]
  },
  "deploy": {
    "startCommand": "npx vite preview --host 0.0.0.0 --port $PORT",
    "healthcheckPath": "/",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "VITE_BACKEND_URL": "https://la-brigade-de-la-douane-back-production.up.railway.app"
      }
    }
  }
}